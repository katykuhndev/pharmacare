<p id="notice"><%= notice %></p>

<h1>Pacientes</h1>

<table>
  <thead>
    <tr>
      <th>Nombres</th>
      <th>Primer apellido</th>
      <th>Segundo apellido</th>
      <th>Rut</th>
      <th>Genero</th>
      <th>Fecha nacimiento</th>
      <th>Fono1</th>
      <th>Fono2</th>
      <th>Email</th>
      <th>Direccion</th>
      <th>Comuna</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pacientes.each do |paciente| %>
      <tr>
        <td><%= paciente.nombres %></td>
        <td><%= paciente.primer_apellido %></td>
        <td><%= paciente.segundo_apellido %></td>
        <td><%= paciente.rut %></td>
        <td><%= paciente.genero %></td>
        <td><%= paciente.fecha_nacimiento %></td>
        <td><%= paciente.fono1 %></td>
        <td><%= paciente.fono2 %></td>
        <td><%= paciente.email %></td>
        <td><%= paciente.direccion %></td>
        <td><%= paciente.comuna.nombre %></td>
        <td><%= link_to (t :show), paciente %></td>
        <td><%= link_to (t :edit), edit_paciente_path(paciente) %></td>
        <td><%= link_to (t :destroy), paciente, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Paciente', new_paciente_path %>
