
<%= form_with(model: @paciente, local: true, html: { class: "form-horizontal", role: "form" }) do |form| %>
  <% if @paciente.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Cerrar</span></button>
      <ul>
      <% @paciente.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :nombres, class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
      <%= form.text_field :nombres, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= form.label :primer_apellido, class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
      <%= form.text_field :primer_apellido, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= form.label :segundo_apellido, class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
      <%= form.text_field :segundo_apellido, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= form.label :rut, class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
      <%= form.text_field :rut, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= form.label :genero, class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
      <%= form.select :genero, Paciente.generos.keys %>
    </div>
  </div>
  <div class="form-group">
    <%= form.label :fecha_nacimiento, class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
      <%= form.text_field :fecha_nacimiento, class: "datepicker" %>
    </div>
  </div>
  <div class="form-group">
    <%= form.label :fono1, class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
      <%= form.number_field :fono1 %>
    </div>
  </div>
  <div class="form-group">
    <%= form.label :fono2, class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
      <%= form.number_field :fono2 %>
    </div>
  </div>
  <div class="form-group">
    <%= form.label :email, class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
      <%= form.email_field :email %>
    </div>
  </div>
  <div class="form-group">
    <%= form.label :direccion, class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
      <%= form.text_area :direccion %>
    </div>
  </div>
  <div class="form-group">
    <%= form.label :comuna_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
      <%= form.collection_select(:comuna_id, Comuna.all.order('nombre'), :id, :nombre) %>
    </div>
  </div>

  <div class="form-group">
    <div class="actions">
      <%= form.submit class: 'btn btn-default bg-secondary text-white' %>
    </div>
  </div>
  
<% end %>
