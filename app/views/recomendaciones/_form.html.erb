<%= form_for(@recomendacion, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @recomendacion.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@recomendacion.errors.count, "error") %> prohibited this recomendacion from being saved:</h4>

      <ul>
      <% @recomendacion.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :id_recomendacion, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :id_recomendacion, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :estado, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :estado, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :resultado, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :resultado, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :caso, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :caso, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :programa, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :programa, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :paciente, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :paciente, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :medico, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :medico, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :prestador, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :prestador, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :farmacia, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :farmacia, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :qf_soporte_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :qf_soporte_id, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :ejecutivo_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :ejecutivo_id, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :fecha_hora_ingreso, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.datetime_select :fecha_hora_ingreso, class: "form-control" %>
