<%= form_with(model: @recomendacion, local: true, html: { class: "form-horizontal", role: "form" }) do |form| %>

  <div class="form-group">
    <h2>Datos paciente</h2>
      <%= form.fields :paciente do |paciente_form| %>
        <div class="form-group">
          <%= paciente_form.label :nombres, class: "col-sm-2 control-label" %>
          <div class="col-sm-6">
            <%= paciente_form.text_field :nombres, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= paciente_form.label :primer_apellido, class: "col-sm-2 control-label" %>
          <div class="col-sm-6">
            <%= paciente_form.text_field :primer_apellido, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= paciente_form.label :segundo_apellido, class: "col-sm-2 control-label" %>
          <div class="col-sm-6">
            <%= paciente_form.text_field :segundo_apellido, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= paciente_form.label :rut, class: "col-sm-2 control-label" %>
          <div class="col-sm-6">
            <%= paciente_form.text_field :rut, class: "form-control" %>
          </div>
        </div>
      <% end %>
  </div>
  <div class="form-group">
    <%= form.label :fecha_hora_respuesta, class: "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= form.datetime_select :fecha_hora_respuesta, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= form.label :observaciones, class: "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= form.text_area :observaciones, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= form.label :qf_soporte_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
      <%= form.collection_select(:qf_soporte_id, User.where(role: 2).order('name'), :id, :name) %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-4">
      <%= form.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
