	<tr><td>Reporte : </td><td>Pacientes Lodux</td></tr>
	<tr><td>Intervalo de Reporte : </td><td>Pacientes Lodux</td></tr>
</table>
<div >
  <table>
  <thead >
    <tr>
      <th>N rec</th>
      <th>Fecha Rec</th>
      <th>Codigo</th>
      <th>Leucocitos</th>    
      <th>R.A.N.</th>
      <th>Alarmas</th>
      <th>A/R</th>
    </tr>
  </thead>

  <tbody>
    <% @recomendaciones.each do |recomendacion| %>
      <tr>
        <td><%= recomendacion.id_recomendacion %></td>
