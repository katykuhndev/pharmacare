<%= form_for(@caso, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @caso.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@caso.errors.count, "error") %> prohibited this caso from being saved:</h4>

      <ul>
      <% @caso.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :codigo, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :codigo, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :programa, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :programa, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :medico, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :medico, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :paciente, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :paciente, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :qf_soporte_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :qf_soporte_id, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :ejecutivo_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :ejecutivo_id, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :fecha_hora_ingreso, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.datetime_select :fecha_hora_ingreso, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :via_ingreso, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :via_ingreso, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :fecha_hora_cierre, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.datetime_select :fecha_hora_cierre, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :observaciones, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :observaciones, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
