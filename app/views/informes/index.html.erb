<div class="page-header">
<h2>Escoja Fechas y tipo de Informes</h2>
</div>
<%= form_with(url: mostrar_listado_path,  method: "patch", local: true, html: { class: "form-horizontal", role: "form" }) do |form| %> 
    <div class="form-group">
        <%= form.label :fecha_desde,'Fecha Desde', class: "col-sm-4 control-label" %>
        <div class="col-sm-4">
          <%= form.text_field :fecha_desde, class: "datepicker" %>
        </div>
    </div>  
    <div class="form-group">
        <%= form.label :fecha_hasta,'Fecha Hasta', class: "col-sm-4 control-label" %>
        <div class="col-sm-4">
          <%= form.text_field :fecha_hasta, class: "datepicker" %>
        </div>
    </div>   
    <div class="form-group">
    <%= form.label :tipo_informe,'Tipo Informe', class: "col-sm-4 control-label" %>
	    <div class="col-sm-4">
	      <%= form.select "tipo_informe", options_for_select([ "Informe Normal", "Informe Medicos", "Informe Medico Adherido" ], "Informe Normal") %>
	    </div>
    </div>  
    <div class="form-group" style="display: none;" id='list_medicos'>
    <%= form.label :medico,'Medico', class: "col-sm-4 control-label" %>
	    <div class="col-sm-4">
	      <%= form.collection_select(:medico_id,  Medico.order(:id), :id, :nombre_completo, {include_blank: 'Seleccione un medico'})  %>
	    </div>
    </div>  
    <div class="col-sm-offset-2 col-sm-4">
      <%= form.submit 'Generar Informe', class: "btn btn-default bg-secondary text-white" %>
    </div>
<% end %>
