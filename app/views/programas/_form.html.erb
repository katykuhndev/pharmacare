<%= form_with(model: [@programa.laboratorio, @programa], local: true, html: { class: "form-horizontal", role: "form" }) do |form| %>
  <% if @programa.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <ul>
      <% @programa.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>  

  <div class="field">
    <%= form.label :nombre %><br />
    <%= form.text_field :nombre %>
  </div>
  <div class="field">
    <%= form.label :descripcion %><br />
    <%= form.text_area :descripcion %>
  </div>
  <div class="form-group">
    <%= form.label :fecha_creacion, class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
      <%= form.text_field :fecha_creacion, class: "datepicker" %>
    </div>
  </div>
    <div class="form-group">
    <%= form.label :qf_soporte_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
      <%= form.collection_select(:qf_soporte_id, User.where(role: 2).order('name'), :id, :name) %>
    </div>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
