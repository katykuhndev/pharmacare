<h2>Listado de Programas</h2>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
  <thead class='bg-secondary text-white' >
    <tr>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th>Fecha creacion</th>
      <th>Qf soporte</th>
      <th colspan="3"><%=(t :text_actions)%></th>
    </tr>
  </thead>

  <tbody>
    <% @programas.each do |programa| %>
      <tr>
        <td><%= programa.nombre %></td>
        <td><%= programa.descripcion %></td>
        <td><%= programa.fecha_creacion %></td>
        <td><%= programa.qf_soporte.name %></td>
        <td><%= link_to (t :text_show), [programa.laboratorio, programa] %></td>
        <td><%= link_to (t :text_edit), edit_laboratorio_programa_path(programa.laboratorio, programa) %></td>
        <td><%= link_to (t :text_destroy), [programa.laboratorio, programa], method: :delete, data: { confirm: (t :text_are_you_sure) } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<div>
  <%= link_to new_laboratorio_programa_path(@laboratorio), class: 'btn btn-default bg-secondary text-white' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Nuevo Programa
  <% end %>
</div>
