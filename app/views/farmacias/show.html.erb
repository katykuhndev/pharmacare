<div class="page-header">
  <%= link_to farmacias_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Volver
  <% end %>
  <%= link_to edit_farmacia_path(@farmacia), class: 'btn btn-default bg-secondary text-white' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Editar
  <% end %>
  <h1>Farmacia</h1>
</div>

<dl class="dl-horizontal">
  <dt>Nombre:</dt>
  <dd><%= @farmacia.nombre %></dd>

  <dt>Contacto:</dt>
  <dd><%= @farmacia.contacto %></dd>

  <dt>Fono:</dt>
  <dd><%= @farmacia.fono %></dd>

  <dt>Direccion:</dt>
  <dd><%= @farmacia.direccion %></dd>

  <dt>Comuna:</dt>
  <dd><%= @farmacia.comuna ? @farmacia.comuna.nombre : ''%></dd>

  <dt>Tipo:</dt>
  <dd><%= @farmacia.tipo %></dd>

</dl>
