  <%= form_with(model: laboratorio, local: true, html: { class: "form-horizontal", role: "form" }) do |form| %>
  <% if @laboratorio.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <ul>
      <% @laboratorio.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :nombre, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= form.text_field :nombre, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= form.label :contacto, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= form.text_field :contacto, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= form.label :fono, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= form.text_field :fono, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= form.label :direccion, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= form.text_area :direccion, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= form.label :comuna_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
      <%= form.collection_select(:comuna_id, Comuna.all.order('nombre'), :id, :nombre) %>
    </div>
  </div>
  <div class="actions">
    <%= form.submit class: 'btn btn-default bg-secondary text-white' %>
  </div>
<% end %>
