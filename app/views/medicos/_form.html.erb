<%= form_with(model: medico, local: true) do |form| %>
  <% if medico.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(medico.errors.count, "error") %> prohibited this medico from being saved:</h2>

      <ul>
      <% medico.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :nombres %>
    <%= form.text_field :nombres %>
  </div>

  <div class="field">
    <%= form.label :primer_apellido %>
    <%= form.text_field :primer_apellido %>
  </div>

  <div class="field">
    <%= form.label :segundo_apellido %>
    <%= form.text_field :segundo_apellido %>
  </div>

  <div class="field">
    <%= form.label :rut %>
    <%= form.text_field :rut %>
  </div>

  <div class="field">
    <%= form.label :genero %>
    <%= form.select :genero, Medico.generos.keys %>
  </div>

  <div class="field">
    <%= form.label :fecha_nacimiento %>
    <%= form.text_field :fecha_nacimiento, class: "datepicker" %>
  </div>

  <div class="field">
    <%= form.label :fono1 %>
    <%= form.number_field :fono1 %>
  </div>

  <div class="field">
    <%= form.label :fono2 %>
    <%= form.number_field :fono2 %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>

  <div class="field">
    <%= form.label :direccion %>
    <%= form.text_area :direccion %>
  </div>

  <div class="field">
    <%= form.label :comuna_id %>
    <%= form.collection_select(:comuna_id, Comuna.all.order('nombre'), :id, :nombre) %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
